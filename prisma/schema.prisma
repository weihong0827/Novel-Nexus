generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Book {
  id          Int        @id @default(autoincrement())
  title       String
  author      String
  genre       String
  isbn        String?    @unique
  description String?
  condition   String
  ownerId     Int
  owner       String[]
  exchanges   Exchange[]
}

model Exchange {
  id          Int      @id @default(autoincrement())
  bookId      Int
  book        Book     @relation(fields: [bookId], references: [id])
  requesterId Int
  requester   String[]
  ownerId     Int
  owner       String[]
  status      String // e.g., "requested", "accepted", "declined", "completed"
  createdAt   DateTime @default(now())
}
